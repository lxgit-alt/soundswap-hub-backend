rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile: only owner can write
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Feedback: can only be created, not updated
    match /feedback/{feedbackId} {
      allow create: if 
        request.auth.uid == request.resource.data.fromUserId &&
        exists(/databases/$(database)/documents/users/$(request.resource.data.toUserId));
      allow read: if request.auth.uid == resource.data.toUserId;
    }

    // Pairing data: read-only for authenticated
    match /pairings/{pairId} {
      allow read: if request.auth != null;
    }
  }
}