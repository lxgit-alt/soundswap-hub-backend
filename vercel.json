{
  "version": 2,
  "functions": {
    "backend/server.js": {
      "maxDuration": 60,
      "memory": 2048
    },
    "backend/routes/generate-video.js": {
      "maxDuration": 300,
      "memory": 4096,
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/generate-video/(.*)",
      "dest": "backend/routes/generate-video.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ],
  "regions": ["iad1"]
}